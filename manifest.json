{
  "manifest_version": 3,
  "name": "移除小站托福广告弹窗",
  "version": "1.0",
  "description": "Removes the login/ad modal on specific zhan.com reading practice pages.",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://top.zhan.com/toefl/read/*",
        "https://top.zhan.com/toefl/listen/*",
        "https://top.zhan.com/toefl/speak/*",
        "https://top.zhan.com/toefl/write/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}